<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.theeranaiasipong.smartcallphone.SettingActivity"
    tools:showIn="@layout/activity_setting">

    <TextView
        android:id="@+id/textview_setting"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="17dp"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/edittext_numberphone"
        tools:ignore="MissingConstraints"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="กรอกข้อมูลก่อนเเล้วค่อยเอาอุปกรณ์ NFC เเตะ"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/colorRed"
        app:layout_constraintHorizontal_bias="0.0" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="  กรอกหมายเลขโทรศัพท์ "
        android:drawableLeft="@drawable/ic_call_black_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="18dp"
        android:inputType="number"
        android:id="@+id/edittext_numberphone" />

    <TextView
        android:id="@+id/textview_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        tools:ignore="MissingConstraints"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="status"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/colorRed"
        app:layout_constraintHorizontal_bias="0.501"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.317"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/edittext_numberphone" />

</android.support.constraint.ConstraintLayout>
